{
    "name": "your-name/clinic-web",
    "description": "A clinic web built with PHP",
    "type": "project",
    "require": {
      "php": ">=7.4"
    },
    "require-dev": {
      "phpunit/phpunit": "^9.5",
      "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "scripts": {
      "serve": "php -S localhost:8000 -t public",
      "serve-root": "php -S localhost:8000",
      "test": "phpunit tests/",
      "lint": "phpcs --standard=PSR2 src/"
    }
  }
  
  